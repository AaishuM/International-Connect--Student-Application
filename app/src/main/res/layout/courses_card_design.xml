<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@drawable/bkg1">

        <!--android:orientation="vertical"-->

        <ImageView
            android:id="@+id/mv_image"
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:src="@drawable/sponsor"
            android:scaleType="centerCrop"
            android:paddingTop="25dp" />
        <TextView
            android:id="@+id/mv_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Our Sponsors "
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="sans-serif-condensed" />

        <RatingBar
            android:id="@+id/mv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4.5"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/mv_title"
            android:layout_toRightOf="@id/mv_image"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/mv_desc"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:textColor="@color/black"
            android:text="Study in the United States with our help lets help you achieve your academic goals"
            android:layout_below="@id/mv_rating"
            android:layout_toRightOf="@id/mv_image"
            android:paddingLeft="50dp"
            android:padding="10dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>